<Window x:Class="ProjektBazyDanych.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektBazyDanych"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>


        <Button Content="Zaloguj się" HorizontalAlignment="Left" Margin="310,318,0,0" VerticalAlignment="Top" Click="Button_Click" RenderTransformOrigin="0.329,0.51" Width="149"/>
        <TextBox x:Name="loginTextBox" HorizontalAlignment="Left" Margin="324,182,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="loginTextBox_TextChanged"/>
        <PasswordBox  x:Name="password" HorizontalAlignment="Left" Margin="324,239,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="loginLabel" HorizontalAlignment="Left" Margin="310,275,0,0" VerticalAlignment="Top" Height="27" Width="163" FontSize="10" Foreground="Red"/>
        <Button x:Name="registerButton" Content="Zarejestruj się" HorizontalAlignment="Left" Margin="310,352,0,0" VerticalAlignment="Top" Width="149" Click="registerButton_Click"/>
    </Grid>
</Window>
